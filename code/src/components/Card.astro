---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 2px;
		background-image: none;
		background-size: 400%;
		border-radius: 8px;
		background-position: 100%;
		transition: background-position var(--std-animation-time) cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	html[data-theme="dark"] .link-card {
		background-color: #23262d;
	}
	html[data-theme="light"] .link-card {
		background-color: #d3d6dd;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 2px);
		border-radius: 6px;
		opacity: 0.8;
	}
	html[data-theme="dark"] .link-card > a {
		background-color: #23262d;
		color: white;
	}
	html[data-theme="light"] .link-card > a {
		background-color: #d3d6dd;
		color: #222;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color var(--std-animation-time) cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-primary));
	}
</style>
